<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.issue.SaveVideoActivity"
    android:orientation="vertical">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#03A9F4">

        <TextView
            android:id="@+id/tv_savereturn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:textColor="#fff"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的作品"
            android:textColor="#fff"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_save"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:tabIndicatorColor="#7ee1f0"
        app:tabSelectedTextColor="#7ee1f0"
        app:tabIndicatorHeight="5dp"
        app:tabGravity="fill"></android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager_save"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"></android.support.v4.view.ViewPager>

</LinearLayout>