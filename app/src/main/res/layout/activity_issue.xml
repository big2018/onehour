<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.issue.IssueActivity"
    android:background="@drawable/drawerlayout_background"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:background="#03A9F4">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="取消"
            android:textColor="#fff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="创作"
            android:textColor="#fff"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/img_sp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/eeee"
        android:layout_marginTop="100dp"/>

    <ImageView
        android:id="@+id/img_dz"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/wwww"
        android:layout_below="@id/img_sp"
        android:layout_marginTop="100dp"/>

</LinearLayout>